{
	"$schema": "../tmlanguage_new.json",
	"name": "UTXT",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#parentheses"
		},
		{
			"include": "#brackets"
		},
		{
			"name": "variable.name.attentionkeyword.utxt",
			"match": "\\b(?i:FixIt|ToDo|XXXX)\\b"
		},
		{
			"name": "string.regexp.attentionkeyword.utxt",
			"match": "\\b(?i:AAABBB-COLTEST)\\b"
		},
		{
			"name": "meta.function.utxt",
			"match": "^\\s*((?i:Sub))\\s+([a-zA-Z_]\\w*)\\b",
			"captures": {
				"1": {
					"name": "keyword.control.utxt"
				},
				"2": {
					"name": "variable.other.sub.utxt"
				}
			}
		},
		{
			"name": "keyword.control.utxt",
			"match": "\\b(?i:Note)\\b"
		},
		{
			"name": "keyword.operator.utxt",
			"match": "\\+|\\-|\\*|\\/|>|<|=|>=|<=|<>"
		},
		{
			"name": "string.quoted.double.utxt",
			"match": "\".*?\""
		},
		{
			"name": "string.quoted.single.utxt",
			"match": "'.*?'"
		},
		{
			"name": "constant.numeric.mavl",
			"match": "\\b(0|[1-9]\\d*)(\\.[0-9]+)?\\b"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"//comment": "Below is a comment line comment.line.hashed-line.utxt",
					"name": "string.regexp.hashed-line.utxt",
					"begin": "#",
					"beginCaptures": {
						"0": {
							"name": "punctuation.comment.utxt"
						}
					},
					"end": "\n"
				},
				{
					"//comment": "Below is a pattern for a heading level 1 text",
					"begin": "^==== ",
					"end": "\n",
					"beginCaptures": {
						"0": { "name": "keyword.operator.utxt" }
					},
					"name": "variable.name.attentionkeyword.utxt"
				},
				{
					"//comment": "Below is a pattern for a heading level 2 text",
					"begin": "^ ---  ",
					"end": "\n",
					"beginCaptures": {
						"0": { "name": "keyword.operator.utxt" }
					},
					"name": "constant.numeric.utxt"
				},
				{
					"//comment": "Below is a pattern for a heading level 3 text",
					"begin": "^  ~~   ",
					"end": "\n",
					"beginCaptures": {
						"0": { "name": "variable.parameter.utxt" }
					},
					"name": "string.quoted.double.utxt"
				},
				{
					"//comment": "Block pattern: Full file content",
					"begin": "<<<<<",
					"end": ">>>>>",
					"beginCaptures": {
						"0": { "name": "keyword.operator.utxt" }
					},
					"endCaptures": {
						"0": { "name": "keyword.operator.utxt" }
					},
					"name": "string.quoted.full-file-content.utxt",
					"patterns": [
						{
						"include": "source.utxt"
						}
					]
				},
				{
					"//comment": "Block pattern: Partial file content",
					"begin": "\\+\\+\\+\\+\\+",
					"end": "\\+\\+\\+\\+\\+",
					"beginCaptures": {
						"0": { "name": "keyword.operator.utxt" }
					},
					"endCaptures": {
						"0": { "name": "keyword.operator.utxt" }
					},
					"name": "string.quoted.part-file-content.utxt",
					"patterns": [
						{
						"include": "source.utxt"
						}
					]
				},
				{
					"//comment": "Block pattern: Code",
					"begin": "%%>",
					"end": "<%%",
					"beginCaptures": {
						"0": { "name": "keyword.operator.utxt" }
					},
					"endCaptures": {
						"0": { "name": "keyword.operator.utxt" }
					},
					"name": "string.regexp.code.utxt",
					"patterns": [
						{
						"include": "source.utxt"
						}
					]
				},
				{
					"//comment": "Block pattern: Command output",
					"begin": "\\.\\.\\.\\.\\.",
					"end": "\\.\\.\\.\\.\\.",
					"beginCaptures": {
						"0": { "name": "keyword.operator.utxt" }
					},
					"endCaptures": {
						"0": { "name": "keyword.operator.utxt" }
					},
					"name": "string.regexp.command-output.utxt"
				},
				{
					"//comment": "Below is a comment line for code examples",
					"begin": "^\\s*%> ",
					"end": "\n",
					"beginCaptures": { "0": { "name": "keyword.operator.utx" } },
					"name": "string.regexp.command-output.utxt",
					"patterns": [
						{
						"include": "source.utxt"
						}
					]
				},				
				{
					"//comment": "Below is a comment line comment.line.double-slash.utxt",
					"name": "string.quoted.double.utxt",
					"begin": "//",
					"end": "\n"
				}		
			]
		},
		"parentheses": {
			"name": "meta.parentheses.utxt",
			"begin": "\\(",
			"beginCaptures": {
				"0": {
					"name": "punctuation.parentheses.begin.utxt"
				}
			},
			"end": "\\)",
			"endCaptures": {
				"0": {
					"name": "punctuation.parentheses.end.utxt"
				}
			},
			"patterns": [
				{
					"include": "source.utxt"
				}
			]
		},
		"brackets": {
			"name": "meta.brackets.utxt",
			"begin": "\\[",
			"beginCaptures": {
				"0": {
					"name": "punctuation.brackets.begin.utxt"
				}
			},
			"end": "\\]",
			"endCaptures": {
				"0": {
					"name": "punctuation.brackets.end.utxt"
				}
			},
			"patterns": [
				{
					"include": "source.utxt"
				}
			]
		}
	},
	"scopeName": "source.utxt"
}